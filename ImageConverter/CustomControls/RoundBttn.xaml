<UserControl x:Class="ImageConverter.RoundBttn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageConverter"
             Name="RoundButton"
             mc:Ignorable="d" Height="44.666" Width="180.5">

    <Viewbox>
        <Grid MouseEnter="Grid_MouseEnter" MouseLeave="Grid_MouseLeave" Focusable="True">
            <Rectangle x:Name="BttnBackground" Fill="#FFDAA619" Width="Auto" Height="Auto" RadiusY="4.5" RadiusX="4.5"/>
            <Label Content="{Binding ButtonText, ElementName=RoundButton}" FontSize="{Binding FontSize, ElementName=RoundButton}" FontFamily="Segoa UI" x:Name="ConvertLabel" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Grid>
    </Viewbox>

</UserControl>
