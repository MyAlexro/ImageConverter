<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageConverter"
        xmlns:CustomControls="clr-namespace:ImageConverter" xmlns:CustomControls1="clr-namespace:ImageConverter.CustomControls" x:Name="MainWindow1" x:Class="ImageConverter.MainWindow"
        mc:Ignorable="d"
        Title="ImageConverter" Height="540" Width="960" ResizeMode="CanMinimize" Loaded="MainWindow_Loaded" Icon="Resources/ImageConverterWindowIcon.png">

    <Window.Resources>
        <Style x:Key="ComboBoxElement" TargetType="Label">
            <Setter Property="Height" Value="26"/>
            <Setter Property="Width" Value="76"/>
            <Setter Property="Background" Value="#FFDAA619"/>
        </Style>
    </Window.Resources>

    <Grid x:Name="MainWindowGrid">
        <StackPanel x:Name="MainWindowStackPanel">

            <!-- Top block, Stackpanel containing window name and side menu button -->
            <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Height="Auto" Width="Auto">
                <!--Button to open the Menu-->
                <CustomControls:MenuButton x:Name="MenuBttn" HorizontalAlignment="Left" Height="Auto" Width="Auto" VerticalAlignment="Top" MouseDown="MenuBttn_MouseDown" Margin="16,10,0,0"/>

                <!-- Title of the window-->
                <TextBlock x:Name="TitleTextBox" Height="64" TextWrapping="Wrap" Margin="286,-6,286,2" Text="ImageConverter" FontSize="48" FontWeight="Bold" Foreground="#FFDAA619" FontFamily="Arial Rounded MT Bold" VerticalAlignment="Bottom">
                    <TextBlock.Effect>
                        <DropShadowEffect Opacity="0.215"/>
                    </TextBlock.Effect>
                </TextBlock>

            </Grid>

            <!-- Bottom block divided in left and right part-->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="Auto" Height="Auto">

                <!-- Left block, Stackpanel containing the ImgViewer and all its related controls-->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Right">
                    <!-- Label that appears only if the users is trying to drop files which can't be converted-->
                    <Label x:Name="WarningLabel" Content="Error text" HorizontalAlignment="Left" VerticalAlignment="Top" Height="Auto" Width="Auto" Foreground="#FFFF3434" FontWeight="Bold" Visibility="Visible" FontSize="10" />

                    <!-- Button that determines if the dropped images replace the images to convert or add up to them-->
                    <Image Tag="Replace" x:Name="AddOrReplaceDroppedImagesBttn" Source="Resources/ReplaceImages.png" Stretch="Uniform" Width="Auto" Height="24" HorizontalAlignment="Left" MouseDown="AddOrReplaceDroppedImagesBttn_MouseDown"/>

                    <!--Container of the images to convert ImgViewer-->
                    <Border  Width="365" Height="330" BorderBrush="Black" BorderThickness="1">
                        <Image x:Name="ImgViewer" Height="330" Width="365" AllowDrop="True" HorizontalAlignment="Center" VerticalAlignment="Center" Source="Resources/ImageConverterDragAndDropEN.png" Opacity="0.3" DragDrop.Drop="ImgViewer_Drop" DragDrop.DragOver="ImgViewer_DragOver" DragDrop.DragLeave="ImgViewer_DragLeave">
                            <Image.ContextMenu>
                                <ContextMenu x:Name="ImageViewerContextMenu" Opened="ImageViewerContextMenu_Opened">
                                    <MenuItem x:Name="EmptyImgViewerCntxtMenuBttn" Click="EmptyImgViewerCntxtMenuBttn_Click" IsEnabled="False"/>
                                </ContextMenu>
                            </Image.ContextMenu>
                        </Image>
                    </Border>

                    <!-- Textblock that shows the name of the image to convert, with a scrollviewer so that if there are too many names the user can use the scrollbar and see all of them-->
                    <ScrollViewer HorizontalAlignment="Left" Height="Auto" MaxHeight="60" VerticalAlignment="Top" Width="365" Margin="0,1,0,0">
                        <TextBlock x:Name="ImagesNameLabel" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap"/>
                    </ScrollViewer>

                </StackPanel>

                <!-- Right block, Conversion options etc -->
                <Grid Width="330">
                    <!-- Stackpanel that contains all the options for the conversion -->
                    <StackPanel x:Name="OptionsStackPanel" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left">

                        <!-- Format to convert images to stackpanel-->
                        <StackPanel Orientation="Horizontal" x:Name="ChooseFormatSP" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,48,0,0">
                            <!--Label that says to choose a format-->
                            <Label x:Name="ChooseFormatLabel" Content="Choose the format &#xA;to convert the images to:" FontFamily="Segoa UI" FontSize="14" Background="{x:Null}" Foreground="Black" Height="50" VerticalAlignment="Top"/>
                            <!-- ComboBox to choose the format to which convert the image-->
                            <ComboBox x:Name="FormatComboBox" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Margin="0,0,0,10" Width="85" Background="#FFDAA619" BorderBrush="#FFDAA619" Foreground="Black" Height="21" IsReadOnly="True" DropDownClosed="FormatComboBox_DropDownClosed">
                                <Label Style="{StaticResource ComboBoxElement}" Content="PNG"/>
                                <Label Style="{StaticResource ComboBoxElement}" Content="JPG"/>
                                <Label Style="{StaticResource ComboBoxElement}" Content="JPEG"/>
                                <Label Style="{StaticResource ComboBoxElement}" Content="BMP"/>
                                <Label Style="{StaticResource ComboBoxElement}" Content="GIF"/>
                                <Label Style="{StaticResource ComboBoxElement}" Content="ICO"/>
                                <Label Style="{StaticResource ComboBoxElement}" Content="CUR"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- PNG image options: Stackpanel that is shown only when one or more images to convert are pngs, it indicates the color the transparency is going to be replaced with-->
                        <StackPanel x:Name="ReplaceTransparencySP" Orientation="Horizontal" Visibility="Visible" Margin="0,8">
                            <Label x:Name="ReplacePngTransparencyLabel" Content="Replace the transparency of png images with:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <ComboBox x:Name="ReplTranspColCB" HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto" SelectedIndex="0" DropDownClosed="ReplTranspColCB_DropDownClosed">
                                <Label x:Name="Nothing" Content="Nothing"/>
                                <Label x:Name="White"  Content="White"/>
                                <Label x:Name="Black" Content="Black"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- GIF format options-->
                        <StackPanel x:Name="GifOptionsSP" Orientation="Vertical" Visibility="Visible" Width="Auto" Height="Auto" Margin="0,8,0,0">
                            <!-- Option that indicates how many times the gif shall be repeated -->
                            <StackPanel Orientation="Horizontal">
                                <Label x:Name="GifRepeatTimes" Content="Times the gif will repeat:"/>
                                <ComboBox x:Name="GifRepTimesCB" Margin="3,0,0,0"  VerticalAlignment="Center" Height="20" SelectedIndex="0" DropDownClosed="GifRepTimesCB_DropDownClosed">
                                    <Label Content="∞"/>
                                    <Label Content="1"/>
                                    <Label Content="2"/>
                                    <Label Content="3"/>
                                    <Label Content="4"/>
                                    <Label Content="5"/>
                                    <Label Content="6"/>
                                    <Label Content="7"/>
                                    <Label Content="8"/>
                                    <Label Content="9"/>
                                    <Label Content="10"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Option that indicates the delay between frames-->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="26" Margin="0,8">
                                <Label Content="Delay time between two frames:" x:Name="GifFramesDelayTimeLabel" />
                                <ComboBox FontSize="10" x:Name="GifFramesDelayOptionsCB" DropDownClosed="GifFramesDelayOptionsCB_DropDownClosed" SelectedIndex="0" VerticalAlignment="Center">
                                    <Label Content="250"/>
                                    <Label Content="500"/>
                                    <Label Content="1000"/>
                                    <Label Content="1500"/>
                                    <Label Content="2000"/>
                                </ComboBox>
                                <Label Content="ms" Height="Auto" Width="Auto"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Compression/Quality options -->
                        <StackPanel x:Name="Compression_QualityOptionsSP" Orientation="Vertical" Margin="0,8">

                            <StackPanel x:Name="QualityOptionSP" Orientation="Horizontal">
                                <Label Content="Quality:"/>
                                <Border>
                                    <TextBlock Text="100%" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </StackPanel>

                            <StackPanel x:Name="CompressionOptionSP" Orientation="Horizontal" Margin="0,8">
                                <Label Content="Compression:"/>
                                <ComboBox x:Name="CompressionTypesCB">
                                    <ComboBoxItem>
                                        <Label Content=""/>
                                    </ComboBoxItem>
                                </ComboBox>
                            </StackPanel>

                        </StackPanel>

                    </StackPanel>

                    <!-- Button to start the conversion of the image-->
                    <CustomControls:RoundBttn x:Name="StartConversionBttn" ButtonText="Convert images" FontSize="12" HorizontalAlignment="Left" Height="36" VerticalAlignment="Top" Width="129" MouseDown="StartConversionBttn_MouseDown" IsEnabled="False" Margin="4,340,0,0"/>

                    <!-- Textblock that appears when a conversion is ongoing or a conversion has finished-->
                    <TextBlock x:Name="ConversionResultTextBlock" Text="Conversion result" x:FieldModifier="public" TextWrapping="Wrap" Visibility="Visible" HorizontalAlignment="Left" VerticalAlignment="Top" Width="Auto" Height="Auto" Margin="140,350,0,0"/>

                </Grid>
            </StackPanel>
        </StackPanel>

        <!--Side menu-->
        <CustomControls:Menu x:Name="Menu" Height="Auto" Width="255" Margin="-262,0,0,0" HorizontalAlignment="Left" >
            <CustomControls:Menu.Effect>
                <DropShadowEffect BlurRadius="10" Opacity="0.75"/>
            </CustomControls:Menu.Effect>
        </CustomControls:Menu>

    </Grid>
</Window>
